<body>
<!-- Page -->

<div id="page" class="shell">
  <!-- Header -->
  <div id="header">
    <!-- Top Navigation -->
    <% include logOutMenuAdmin.ejs %>
    <!-- / Top Navigation -->
    <div class="cl">&nbsp;</div>
    <!-- Logo -->
    <div id="logo">
      <h1><a href="link to our home page/contact page">Movie<span>Shack</span></a></h1>
      <p class="description">Your Movie zone</p>
    </div><!-- / Logo -->
    
    <!-- Main Navigation --><!-- / Main Navigation -->
 <div class="cl">&nbsp;</div>
    <!-- Sort Navigation -->
  <div id="sort-nav">
    <div class="bg-right"> 

      <div class="bg-left">

        <% include Adminmenu.ejs %>

         <div id="main">
          <div id="main-bot">
          <div class="container-fluid">

            <div class="row-fluid" id="edit_form">
           
                <table class="table table-hover">
               
                 <% for (var i=0; i < rows.length ; i++) { %>
                 <tr class="info"><td class="info">Movie Name</td><td class="info"><%= rows[i].movie_name %></td><td>&nbsp;&nbsp;</td><td>&nbsp;&nbsp;</td><td>&nbsp;&nbsp;</td></tr>
                 <tr class="info"><td class="info">Categories</td><td class="info"><%= rows[i].categories %></td><td>&nbsp;&nbsp;</td><td>&nbsp;&nbsp;</td><td>&nbsp;&nbsp;</td></tr>
                 <tr class="info"><td class="info">Banner</td><td class="info"><%= rows[i].banner %></td><td>&nbsp;&nbsp;</td><td>&nbsp;&nbsp;</td><td>&nbsp;&nbsp;</td></tr>
                 <tr class="info"><td class="info">Rent</td><td class="info">$<%= rows[i].rent %></td><td>&nbsp;&nbsp;</td><td>&nbsp;&nbsp;</td><td>&nbsp;&nbsp;</td></tr>
                 <tr class="info"> <td class="info">Copies</td><td class="info"><%= rows[i].copies %></td><td>&nbsp;&nbsp;</td><td>&nbsp;&nbsp;</td><td>&nbsp;&nbsp;</td></tr>
                 <tr class="info"> <td class="info">Release Date</td><td class="info"><%= rows[i].releasedate %></td><td>&nbsp;&nbsp;</td><td>&nbsp;&nbsp;</td><td>&nbsp;&nbsp;</td></tr>
                 <tr class="info"><td class="info">Customer's who has rented this</td>
             
                     
                    <% if ((rows[i].persons != null) && (typeof rows[i].persons != undefined) ) {%>
                      <td class="info"><%= rows[i].persons  %></td><td>&nbsp;&nbsp;</td><td>&nbsp;&nbsp;</td><td>&nbsp;&nbsp;</td>
                     <% }else{ %>
                     <td class="info">No Customer has rented this yet</td><td>&nbsp;&nbsp;</td><td>&nbsp;</td><td>&nbsp;</td>
                     <% } %> 
                     
                     </tr> 
                     <div id="buttonStrip">
                      <tr class="info">
                      
                      <input type= "hidden" id ="id" value ="<%= rows[i].movie_id %>" />
                      <input type= "hidden" id ="name" value ="<%= rows[i].movie_name %>" />
                      <input type= "hidden" id ="banner" value ="<%= rows[i].banner %>" />
                      <input type= "hidden" id ="releasedate" value ="<%= rows[i].releasedate %>" />
                      <input type= "hidden" id ="rent" value ="<%= rows[i].rent %>" />
                      <input type= "hidden" id ="copies" value ="<%= rows[i].copies %>" />
                       <% var link1 = "/addMovie?"+rows[0].movie_id %>
                     <!--  <form action = <%= link1 %>  method = "get">  -->
                      <td><input class="btn btn-primary" type = "submit" name="editmovie" id = "editmovie" value="Edit Movie" onclick="location.href='<%= link1%>';" /></td>
                     <!--  </form> -->
                      
                      <td><input class="btn btn-primary" name="deleteButton" type = "button" value="Delete Movie" onclick = "deleteItem(<%=rows[0].movie_id %>)" /></td>
                    
                      <% var link3 = "/rentmoviepage?"+rows[0].movie_id %>
                      <form action = <%=link3 %>  method = "post"> 
                        <% if(rows[0].copies > 0){ %>
                      <td><input class="btn btn-primary" id = "rentButton" name = "rentButton" type = "submit" value="Rent Movie"/></td>
                      <% }else{ %>
                       <td><input class="btn btn-primary" disabled="disabled" id = "rentButton" name = "rentButton" type = "submit" value="Rent Movie"/></td>
                       <% } %>
                      </form>
                       <% var link4 = "/submitmoviepage?"+rows[0].movie_id %>
                      <form action = <%=link4 %>  method = "post"> 
                        <% if(ifRented){%>
                      <td><input class="btn btn-primary" id = "submitButton" name = "submitButton" type = "submit" value="Return This Movie"/></td>
                      <% }else{ %>
                      <td><input class="btn btn-primary disabled" id = "submitButton" name = "submitButton" type = "submit" value="Return This Movie"/></td>
                      <% } %>
                      </form>
                      <td class="info">&nbsp;&nbsp;</td>
                      
                      
                     
                     </tr>
                      </div>
                    <% } %>

                </table>
               
           </div>
         </div>
       </div>
        </div>


        <table class="table table-hover">
       
          
    </script>
        </table>
</tr>

        </div>
      </div>
    </div>
    </div>
    <!-- / Sort Navigation -->
    
  </div>


  
  </div>
</div>


