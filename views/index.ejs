<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<title>MovieShack</title>
<meta http-equiv="Content-type" content="text/html; charset=utf-8" />
<link rel="stylesheet" href="css/style.css" type="text/css" media="all" />

<!--[if IE 6]><link rel="stylesheet" href="css/ie6-style.css" type="text/css" media="all" /><![endif]-->
<script src="js/jquery-1.3.2.min.js" type="text/javascript"></script>
<script src="js/videolibrary.js" type="text/javascript"></script>
<script src="js/fns.js" type="text/javascript"></script>

</head>
<body>
<!-- Page -->
<div id="page" class="shell">
  <!-- Header -->
  <div id="header">
    <!-- Top Navigation -->
    <% include logOutMenu.ejs %>
    <!-- / Top Navigation -->
    <div class="cl">&nbsp;</div>
    <!-- Logo -->
    <div id="logo">
      <h1><a href="#">Movie<span>Shack</span></a></h1>
      <p class="description">your Movie zone</p>
    </div>
    <!-- / Logo -->
    <!-- Main Navigation --><!-- / Main Navigation -->
    <div class="cl">&nbsp;</div>
    <!-- Sort Navigation -->
    <div id="sort-nav">
      <div class="bg-right">
        <div class="bg-left">
          <% include userMenu.ejs %>
        </div>
      </div>
    </div>
    <!-- / Sort Navigation -->
  </div>
  <!-- / Header -->
  <!-- Main -->
  <div id="main">
    <div id="main-bot">
      <div class="cl">&nbsp;</div>
      <!-- Content -->
      <div id="content">
      
      <!-- poster block -->
      
        <div class="block">
          <div class="block-bot">
            <div class="block-cnt">
              <div id="slider" style="height:287px">
                <div class="buttons"> <span class="prev">prev</span> <span class="next">next</span> </div>
                <div class="holder">
                  <div class="frame">&nbsp;</div>
                  <div class="content">
                    <ul>
                    <li class="fragment">
                      <div class="image">
                        <img src="css/images/img10.jpg" alt="" /> 
                      </div>        
                    </li>
                    <li class="fragment">
                      <div class="image"> <img src="css/images/homealone.jpg" alt="" /> </div>
                    </li>
                    <li class="fragment">
                      <div class="image"> <img src="css/images/img10.jpg" alt="" /> </div>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      
      
      
      
      
      <!-- Poster Block Ends -->
      
      <!-- Movie Block -->
          <% include movieListBox.ejs %>
                        
            
          <!-- Movie Block ends -->
    </div>
    
    
    <!-- / Content -->
    <!--  -->
    <div id="sidebar">
      
      
      <!-- Search -->
      <div id="search" class="block">
        <div class="block-bot">
          <div class="block-cnt">
           
              <div class="cl">&nbsp;</div>
              <div class="fieldplace">
                <input type="text" class="field" placeHolder="Search" title="Search" id="searchStr"/>
              </div>
              <input type="button" class="button" value="GO" onClick="validateSearch();"/>
              <div class="cl">&nbsp;</div>
           
          </div>
        </div>
      </div>
      <!-- / Search -->
      
      
      <!-- Sign In -->
      

      <% if(typeof dpname != 'undefined' && dpname != "" ) {%>
      <%}else{%>
          <div id="sign" class="block">
            <div class="block-bot">
              <div class="block-cnt">
                <div class="cl">&nbsp;</div>
                <a href="/login" class="button button-left">sign in</a> <a href="/signup" class="button button-right">create account</a>
                <div class="cl">&nbsp;</div>
                
              </div>
            </div>
          </div>
      <%} %>
      <!-- / Sign In -->
      <div class="block">
        <div class="block-bot">
          <div class="head">
            <div class="head-cnt">
              <h3>Categories</h3>
            </div>
          </div>
          
          <div class="image-articles articles">
            <div class="cl">&nbsp;</div>
            <% for (var i=0; i < categoryList.length;i++) { %>
            <div class="article">
              <div class="cl">&nbsp;</div>
              <div class="image"> </div>
              <div class="cnt">
                <h4><a href="#" onClick="getMoviesByCategory(<%= categoryList[i].category_id%>,'<%= categoryList[i].category_name%>')"><%= categoryList[i].category_name%></a></h4>
               
              </div>
              <div class="cl">&nbsp;</div>
            </div>
            
           <% } %>
            
           
            <div class="cl">&nbsp;</div>
            <a href="#" class="view-all">&nbsp;</a>
            <div class="cl">&nbsp;</div>
          </div>
        </div>
      </div>
      <div class="block"></div>
    </div>
    <!-- / Sidebar -->
    <div class="cl">&nbsp;</div>
    <!-- Footer -->
    <div id="footer">
     
    <!-- / Footer -->
  </div>
</div>
<!-- / Main -->
</div>
<!-- / Page -->
</body>
</html>
