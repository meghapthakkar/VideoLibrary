      <div class="panel-body">
        <form method="post" action="/updateUserDetails">
          <table width="80%">
            <tr>
              <td width="30%">
                  <b>FirstName</b>
              </td>
              <td width="2%">
                  <b>:</b>
              </td>
              <td width="65%">
                  <%=firstname%><input type="hidden" name="firstname" id="firstname" value="<%=firstname%>">
              </td>
            </tr>
            <tr>
              <td width="30%">
                  <b>LastName</b>
              </td>
              <td width="2%">
                  <b>:</b>
              </td>
              <td width="65%">
                  <%=lastname%><input type="hidden" name="lastname" id="lastname" value="<%=lastname%>">
              </td>
            </tr>
            <tr>
              <td width="30%">
                  <b>Address Line 1</b>
              </td>
              <td width="2%">
                  <b>:</b>
              </td>
              <td width="65%">
                  <%=addressline1%><input type="hidden" name="addressline1" id="addressline1" value="<%=addressline1%>">
              </td>
            </tr>
            <tr>
              <td width="30%">
                  <b>Address Line 2</b>
              </td>
              <td width="2%">
                  <b>:</b>
              </td>
              <td width="65%">
                  <%=addressline2%><input type="hidden" name="addressline2" id="addressline2" value="<%=addressline2%>">
              </td>
            </tr>
            <tr>
              <td width="30%">
                  <b>city</b>
              </td>
              <td width="2%">
                  <b>:</b>
              </td>
              <td width="65%">
                  <%= city%><input type="hidden" name="city" id="city" value="<%=city%>">
              </td>
            </tr>
            <tr>
              <td width="30%">
                  <b>state</b>
              </td>
              <td width="2%">
                  <b>:</b>
              </td>
              <td width="65%">
                  <%= state%><input type="hidden" name="state" id="state" value="<%=state%>">
              </td>
            </tr>
            <tr>
              <td width="30%">
                  <b>zipcode</b>
              </td>
              <td width="2%">
                  <b>:</b>
              </td>
              <td width="65%">
                  <%= zipcode%><input type="hidden" name="zipcode" id="zipcode" value="<%=zipcode%>">
              </td>
            </tr>
            <tr>
              <td width="30%">
                  <b>membership type</b>
              </td>
              <td width="2%">
                  <b>:</b>
              </td>
              <td width="65%">
                  <%= member_type%><input type="hidden" name="zipcode" id="zipcode" value="<%=zipcode%>">
              </td>
            </tr>
            <tr>
              <td width="30%">
                  <b>username</b>
              </td>
              <td width="2%">
                  <b>:</b>
              </td>
              <td width="65%">
                  <%= username%><input type="hidden" name="username" id="username" value="<%=username%>">
              </td>
            </tr>
            <tr>
              <td width="30%">
                  <b>Number of movies issued</b>
